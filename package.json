{
  "name": "create-canvas-context",
  "version": "1.2.1",
  "description": "Create a canvas and get a rendering context from it.",
  "author": "Marc Bouchenoire",
  "license": "MIT",
  "repository": "https://github.com/marcbouchenoire/create-canvas-context",
  "keywords": [
    "canvas",
    "offscreen",
    "context"
  ],
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "sideEffects": false,
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.module.js",
  "modern": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "module": "./dist/index.module.js",
      "import": "./dist/index.mjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "prettier": "@marcbouchenoire/prettier-config",
  "nano-staged": {
    "**/*.mjs": [
      "eslint --fix",
      "yarn prettier"
    ],
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "tsatsiki --project tsconfig.json",
      "yarn prettier"
    ],
    "**/*.{json,md,yml}": [
      "yarn prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "nano-staged"
    }
  },
  "scripts": {
    "build": "microbundle --tsconfig tsconfig.build.json",
    "prettier": "prettier --write --loglevel silent --ignore-path .eslintignore",
    "lint": "yarn lint:eslint && yarn lint:tsc && yarn lint:prettier",
    "lint:eslint": "eslint '**/*.{mjs,ts,tsx}' --fix",
    "lint:prettier": "yarn prettier '**/*.{mjs,ts,tsx,json,md,yml}'",
    "lint:tsc": "tsc --project tsconfig.json",
    "prepublishOnly": "yarn build",
    "release": "yarn login && np",
    "test": "wtr",
    "test:coverage": "yarn test --coverage"
  },
  "devDependencies": {
    "@marcbouchenoire/eslint-config": "^2.2.1",
    "@marcbouchenoire/prettier-config": "^1.1.0",
    "@types/offscreencanvas": "^2019.6.4",
    "@web/dev-server-esbuild": "^0.2.16",
    "@web/test-runner": "^0.13.22",
    "@web/test-runner-puppeteer": "^0.10.4",
    "eslint": "^8.3.0",
    "husky": "4.3.8",
    "microbundle": "^0.14.2",
    "nano-staged": "^0.5.0",
    "np": "^7.6.0",
    "prettier": "^2.4.1",
    "tsatsiki": "^2.0.0",
    "typescript": "^4.5.2",
    "uvu": "^0.5.2"
  }
}
